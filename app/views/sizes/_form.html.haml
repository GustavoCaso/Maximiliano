= form_for @size do |f|
  - if @size.errors.any?
    #error_explanation
      %h2= "#{pluralize(@size.errors.count, "error")} prohibited this size from being saved:"
      %ul
        - @size.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.number_field :product_id
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
