!!!
%html
  %head
    %title Maximiliano
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{content: "width=device-width", name: "viewport"}
  %body
    #container
      .row.color_header
        .container
          .col-lg-2.col-md-2.col-xs-12
            #logo
              = link_to (image_tag "logo.png", alt: "MaximilianoDeYork", class: "img-responsive"), root_path, class: "no-border"
          .col-md-10.col-lg-10
            #logo_text
              = image_tag("maximiliano_v2.png", class: "img-responsive")


          .row
            .col-lg-12.col-md-12.col-lg-push-2.col-md-push-2.hidden-sm.hidden-xs.main_menu
              %ul.dropdown-menu.clearfix{"aria-labelledby" => "dropdownMenu", role: "menu", style: "display: block; position: static;"}
                %li.dropdown-submenu
                  %a{href: collection_path, class:("underline" if @switch== "collection") } COLECCION
                  %ul.dropdown-menu.coleccion.quicksand{class: ("visible" if @switch == "collection")}
                    %li
                      %a{href: "#", class: "channel"} CHANNEL
                    %li
                      %a{href: "#", class: "piel"} PIEL
                    %li
                      %a{href: "#", class: "trajes"} TRAJES
                    %li
                      %a{href: "#", class: "abrigos"} ABRIGOS
                %li.dropdown-submenu
                  %a{href: urban_path, class:("underline" if @switch== "urban")  } URBANO
                  %ul.dropdown-menu.urbano.quicksand{class: ("visible" if @switch == "urban")}
                    %li
                      %a{href: "#", class: "punto_clasico"} PUNTO CLASICO
                    %li
                      %a{href: "#", class: "punto_deco"} PUNTO DECO
                    %li
                      %a{href: "#", class: "basico"} BÁSICOS
                    %li
                      %a{href: "#", class: "impermeables"} IMPERMEABLES
                %li.dropdown-submenu
                  %a{href: accesories_path, class:("underline" if @switch== "accesories")  } ACCESORIOS
                  %ul.dropdown-menu.accesorios.quicksand{class: ("visible" if @switch == "accesories")}
                    %li
                      %a{href: "#", class: "mantas"} MANTAS
                    %li
                      %a{href: "#", class: "cojines"} COJINES
                    %li
                      %a{href: "#", class: "collares"} COLLARES
                    %li
                      %a{href: "#", class: "correas"} CORREAS
                - if outlet?
                  %li= link_to "OUTLET", outlet_path, class:("underline" if @switch== "outlet")
                %li= link_to "SASTRE", tailor_path, class:("underline" if @switch== "tailor")

                - if Cart.find_by_id(session[:cart_id])
                  %li= link_to "CARRITO", cart_path(), class:("underline" if @switch== "shop")

          .row
            .visible-sm.visible-xs.small-menu
              %p.small-menu-button
              %ul.small-menu-list.dropdown-menu.clearfix{"aria-labelledby" => "dropdownMenu", role: "menu", style: "display: block; position: static;"}
                %li.dropdown-submenu.col-xs-12
                  %a{href: collection_path, class:("underline" if @switch== "collection") } COLECCION
                %li.dropdown-submenu.col-xs-12
                  %a{href: urban_path, class:("underline" if @switch== "urban")  } URBANO
                %li.dropdown-submenu.col-xs-12
                  %a{href: accesories_path, class:("underline" if @switch== "accesories")  } ACCESORIOS
                - if outlet?
                  %li.col-xs-12= link_to "OUTLET", outlet_path, class:("underline" if @switch== "outlet")
                %li.col-xs-12= link_to "SASTRE", tailor_path, class:("underline" if @switch== "tailor")
                - if Cart.find_by_id(session[:cart_id])
                  %li.col-xs-12= link_to "CARRITO", cart_path(), class:("underline" if @switch== "shop")

      = yield


    #footer_content
      .container
        .row
          .col-lg-4.col-md-5.col-sm-6.col-sm-offset-1.col-xs-12
            %nav.footer_nav
              %ul
                %li= link_to "AYUDA", help_path
                %li= link_to  "NOSOTROS", us_path
                %li= link_to  "MI CUENTA", new_user_session_path
          .col-lg-5.col-lg-offset-3.col-md-4.col-md-offset-2.col-sm-5.col-xs-12
            %span
              = mail_to "info@maximilianodeyork.com", "INFO@MAXIMILIANODEYORK.COM"
