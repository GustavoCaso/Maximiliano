= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Nombre"
    = f.text_field :name
  .field
    = f.label :email, "Mail"
    = f.text_field :email
  .field
    = f.label :address, "Direccion"
    = f.text_area :address
  .field
    = f.label :city, "Ciudad"
    = f.text_field :city
  .field
    = f.label :postcode , "CP"
    = f.text_field :postcode
  .actions
    = f.submit 'Realizar Pedido', class: "my_button"
